@model StalkBook.Models.StatusViewModel

<h2>NewsFeed Index</h2>
<div class="newsfeed-box">
    <form role="form" method="post">
        <div class="form-group status-content">
            @Html.TextAreaFor(model => model.status.body, new { @rows = 5, @cols = 50, @maxlength = 200, @placeholder = "What's happening?", htmlAttributes = new { @class = "form-control" } })
            @Html.TextAreaFor(model => model.status.urlToPic, new { @rows = 1, @cols = 50, @maxlength = 250, @placeholder = "Enter url to picture...", htmlAttributes = new { @class = "form-control" } })
        </div>
        <button type="submit" class="btn btn-default">Post</button>
    </form>
</div>