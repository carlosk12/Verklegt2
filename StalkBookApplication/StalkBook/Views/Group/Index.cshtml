@using Antlr.Runtime.Tree
@using Microsoft.AspNet.Identity
@model  StalkBook.Models.GroupViewModel

@{
    ViewBag.Title = "My groups";
}

<div>
    <h2>My Groups</h2>

    <div class="elegant-aero">
        <form role="form" method="post">
            <span class="form-group status-content">
                @Html.TextBoxFor(model => model.name, new { @placeholder = "Enter group name", required = "required", oninvalid="this.setCustomValidity('Enter group name here')", oninput="setCustomValidity('')" })
                <button type="submit" class="btn btn-default">Create Group</button>
            </span>

        </form>
    </div>

    <div>
            @foreach (var item in Model.groups)
            {
                if (item.ownerId == User.Identity.GetUserId())
                {
                    <div class="search-body content form-inline">
                        <span>@Html.ActionLink(item.name, "GetGroupById", "Group", new { groupId = item.ID }, null)</span> <span>@Html.ActionLink("Delete group", "Delete", "Group", new {@class = "btn btn-primary elegant-aero"})</span>
                    </div>
                }
                else
                {
                    <p class="search-body content">
                        @item.name
                    </p>
                }
            }
    </div>
</div>